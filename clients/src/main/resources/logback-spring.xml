    </appender>


    <!-- GENERAL LOG FILE -->
    <logger name="org.hibernate" level="ERROR">
        <appender-ref ref="SAVE-TO-FILE"/>
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="online.prostobank.clients" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SAVE-TO-FILE"/>
    </logger>


    <!-- REST API -->
    <logger name="online.prostobank.clients.api" level="DEBUG" additivity="false">
        <appender-ref ref="SAVE-TO-FILE-REST-API"/>
        <appender-ref ref="CONSOLE" />

    </logger>


    <!-- HIBERNATE -->
    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="SAVE-TO-FILE-HIBERNATE"/>
        <appender-ref ref="CONSOLE" />

    </logger>


    <!-- CONNECTORS -->
    <logger name="online.prostobank.clients.connectors" level="DEBUG" additivity="false">
        <appender-ref ref="SAVE-TO-FILE-CONNECTORS"/>
